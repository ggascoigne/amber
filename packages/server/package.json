{
  "name": "@amber/server",
  "version": "0.1.0",
  "description": "Shared AmberCon NW trpc server",
  "author": "guy@wyrdrune.com",
  "license": "MIT",
  "type": "module",
  "files": [],
  "main": "./src/index.ts",
  "types": "./src/index.ts",
  "private": true,
  "scripts": {
    "prisma:generate": "dotenv -e ../../apps/${DB_ENV}/.env -- pnpm dlx prisma generate --no-hints --schema ./prisma/schema.prisma --sql",
    "prisma:db:pull": "dotenv -e ../../apps/${DB_ENV}/.env -- pnpm dlx prisma db pull && pnpm prisma:format",
    "prisma:format": "dotenv -e ../../apps/${DB_ENV}/.env -- prisma-case-format -f ./prisma/schema.prisma",
    "postinstall": "DB_ENV=acnw pnpm prisma:generate",
    "prisma-repl": "DB_ENV=acnw dotenv -e ../../apps/${DB_ENV}/.env -- node --import=tsx ./src/utils/prisma-repl.ts",
    "tsc": "tsc -p ./tsconfig.json",
    "tsgo": "tsgo -p ./tsconfig.json"
  },
  "dependencies": {
    "@amber/database": "workspace:*",
    "@amber/environment": "workspace:*",
    "@auth0/nextjs-auth0": "4.13.1",
    "@prisma/adapter-pg": "^7.0.1",
    "@prisma/client": "^7.0.1",
    "@t3-oss/env-core": "^0.13.8",
    "@t3-oss/env-nextjs": "^0.13.8",
    "@tanstack/react-query": "^5.90.11",
    "@trpc/client": "^11.7.2",
    "@trpc/next": "^11.7.2",
    "@trpc/react-query": "11.7.2",
    "@trpc/server": "^11.7.2",
    "@trpc/tanstack-react-query": "^11.7.2",
    "debug": "^4.4.3",
    "pg": "^8.16.3",
    "prisma-case-format": "^2.2.1",
    "superjson": "^2.2.5",
    "tsconfig-paths": "^4.2.0",
    "tsx": "^4.20.6",
    "zod": "^4.1.13"
  },
  "devDependencies": {
    "@amber/tsconfig": "workspace:*",
    "@types/debug": "~4.1.12",
    "@types/node": "^24.10.1",
    "@types/pg": "^8.15.6",
    "@typescript/native-preview": "7.0.0-dev.20251126.1",
    "cli-table3": "^0.6.5",
    "commander": "^14.0.2",
    "dotenv": "^17.2.3",
    "prisma": "^7.0.1",
    "typescript": "^5.9.3"
  }
}
