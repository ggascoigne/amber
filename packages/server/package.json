{
  "name": "@amber/server",
  "version": "0.1.0",
  "description": "Shared AmberCon NW trpc server",
  "author": "guy@wyrdrune.com",
  "license": "MIT",
  "type": "module",
  "files": [],
  "main": "./src/index.ts",
  "types": "./src/index.ts",
  "private": true,
  "scripts": {
    "prisma:generate": "dotenv -e ../../apps/${DB_ENV}/.env -- pnpx prisma generate --no-hints --schema ./prisma/schema.prisma --sql",
    "prisma:db:pull": "dotenv -e ../../apps/${DB_ENV}/.env -- pnpx prisma db pull && pnpm prisma:format",
    "prisma:format": "dotenv -e ../../apps/${DB_ENV}/.env -- prisma-case-format -f ./prisma/schema.prisma",
    "postinstall": "DB_ENV=acnw pnpm prisma:generate",
    "tsc": "tsc -p ./tsconfig.json",
    "tsgo": "tsgo -p ./tsconfig.json"
  },
  "dependencies": {
    "@amber/environment": "workspace:*",
    "@auth0/nextjs-auth0": "^3.8.0",
    "@prisma/client": "^6.10.1",
    "@t3-oss/env-core": "^0.13.8",
    "@t3-oss/env-nextjs": "^0.13.8",
    "@tanstack/react-query": "^5.80.10",
    "@trpc/client": "^11.4.2",
    "@trpc/next": "^11.4.2",
    "@trpc/react-query": "11.4.2",
    "@trpc/server": "^11.4.2",
    "@trpc/tanstack-react-query": "^11.4.2",
    "database": "workspace:*",
    "debug": "^4.4.1",
    "next": "13.5.6",
    "pg": "^8.16.1",
    "prisma-case-format": "^2.2.1",
    "superjson": "^2.2.2",
    "tsconfig-paths": "^4.2.0",
    "tsx": "^4.20.3"
  },
  "devDependencies": {
    "@types/debug": "~4.1.12",
    "@types/node": "^22.15.32",
    "@types/pg": "^8.15.4",
    "@typescript/native-preview": "7.0.0-dev.20250619.1",
    "dotenv": "^16.5.0",
    "prisma": "^6.10.1",
    "tsconfig": "workspace:*",
    "typescript": "^5.8.3",
    "zod": "^3.25.67"
  }
}
