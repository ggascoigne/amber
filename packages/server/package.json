{
  "name": "@amber/server",
  "version": "0.1.0",
  "description": "Shared AmberCon NW trpc server & db access",
  "author": "guy@wyrdrune.com",
  "license": "MIT",
  "type": "module",
  "files": [],
  "main": "./src/index.ts",
  "types": "./src/index.ts",
  "private": true,
  "scripts": {
    "db:clean": "./scripts/createCleanDb.ts",
    "db:writeDbCert": "./scripts/writeDbCert.ts",
    "db:docker:down": "docker compose down",
    "db:docker:up": "docker compose up -d",
    "db:import": "./scripts/toLocal.ts",
    "db:migrate:generate": "tsx node_modules/knex/bin/cli.js migrate:make --knexfile ./support/knexfile.ts generate",
    "db:migrate:up": "pnpm db:writeDbCert && tsx node_modules/knex/bin/cli.js migrate:latest --knexfile ./support/knexfile.ts up",
    "db:setup": "./scripts/newDb.ts",
    "db:setup.old": "pnpm db:clean && pnpm db:migrate:up",
    "db:start": "docker compose up -d && ./scripts/wait-for-postgres.sh -c amber-postgres",
    "db:startFromClean": "pnpm db:start && pnpm db:setup && pnpm db:import",
    "prisma:generate": "dotenv -e ../../apps/${DB_ENV}/.env -- pnpm dlx prisma generate --no-hints --schema ./prisma/schema.prisma --sql",
    "prisma:db:pull": "dotenv -e ../../apps/${DB_ENV}/.env -- pnpm dlx prisma db pull && pnpm prisma:format",
    "prisma:format": "dotenv -e ../../apps/${DB_ENV}/.env -- prisma-case-format -f ./prisma/schema.prisma",
    "postinstall": "DB_ENV=acnw pnpm prisma:generate",
    "prisma-repl": "DB_ENV=acnw dotenv -e ../../apps/${DB_ENV}/.env -- node --import=tsx ./src/utils/prisma-repl.ts",
    "prisma:seed:test": "dotenv -e ../../apps/${DB_ENV}/.env.test -- node --import=tsx ./src/utils/seed.test.ts",
    "tsc": "tsc -p ./tsconfig.json",
    "tsgo": "tsgo -p ./tsconfig.json"
  },
  "dependencies": {
    "@amber/environment": "workspace:*",
    "@auth0/nextjs-auth0": "4.14.0",
    "@prisma/adapter-pg": "^7.1.0",
    "@prisma/client": "^7.1.0",
    "@t3-oss/env-core": "^0.13.10",
    "@t3-oss/env-nextjs": "^0.13.10",
    "@tanstack/react-query": "^5.90.12",
    "@trpc/client": "^11.8.0",
    "@trpc/next": "^11.8.0",
    "@trpc/react-query": "11.8.0",
    "@trpc/server": "^11.8.0",
    "@trpc/tanstack-react-query": "^11.8.0",
    "common-tags": "^1.8.2",
    "debug": "^4.4.3",
    "jose": "^6.1.3",
    "listr2": "^9.0.5",
    "next": "16.0.7",
    "luxon": "^3.7.2",
    "pg": "^8.16.3",
    "prisma-case-format": "^2.2.1",
    "superjson": "^2.2.6",
    "tsconfig-paths": "^4.2.0",
    "tsx": "^4.21.0",
    "zod": "^4.2.0"
  },
  "devDependencies": {
    "@amber/tsconfig": "workspace:*",
    "@types/common-tags": "^1.8.4",
    "@types/debug": "~4.1.12",
    "@types/fs-extra": "^11.0.4",
    "@types/luxon": "^3.7.1",
    "@types/node": "^25.0.2",
    "@types/pg": "^8.16.0",
    "@typescript/native-preview": "7.0.0-dev.20251215.1",
    "chalk": "^5.6.2",
    "cli-table3": "^0.6.5",
    "commander": "^14.0.2",
    "common-tags": "^1.8.2",
    "dotenv": "^17.2.3",
    "knex": "^3.1.0",
    "knex-migrate": "^1.7.4",
    "prisma": "^7.1.0",
    "tempy": "^3.1.0",
    "ts-toolbelt": "^9.6.0",
    "typescript": "^5.9.3",
    "zx": "^8.8.5"
  }
}
