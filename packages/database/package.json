{
  "name": "@amber/database",
  "version": "0.1.0",
  "description": "Shared AmberCon NW database config",
  "author": "guy@wyrdrune.com",
  "license": "MIT",
  "type": "module",
  "files": [],
  "private": true,
  "scripts": {
    "db:clean": "./scripts/createCleanDb.ts",
    "db:writeDbCert": "./scripts/writeDbCert.ts",
    "db:docker:down": "docker compose down",
    "db:docker:up": "docker compose up -d",
    "db:import": "./scripts/toLocal.ts",
    "db:migrate:generate": "tsx node_modules/knex/bin/cli.js migrate:make --knexfile ./support/knexfile.ts generate",
    "db:migrate:up": "pnpm db:writeDbCert && tsx node_modules/knex/bin/cli.js migrate:latest --knexfile ./support/knexfile.ts up",
    "db:setup": "pnpm db:clean && pnpm db:migrate:up",
    "db:start": "docker compose up -d && ./scripts/wait-for-postgres.sh -c amber-postgres",
    "db:startFromClean": "pnpm db:start && pnpm db:setup && pnpm db:import",
    "tsc": "tsc -p ./tsconfig.json",
    "tsgo": "tsgo -p ./tsconfig.json"
  },
  "dependencies": {
    "@amber/environment": "workspace:*",
    "@t3-oss/env-core": "^0.13.8",
    "@t3-oss/env-nextjs": "^0.13.8",
    "common-tags": "^1.8.2",
    "debug": "^4.4.1",
    "listr2": "^9.0.3",
    "luxon": "^3.7.1",
    "pg": "^8.16.3",
    "tsconfig-paths": "^4.2.0",
    "tsx": "^4.20.5"
  },
  "devDependencies": {
    "@amber/tsconfig": "workspace:*",
    "@types/common-tags": "^1.8.4",
    "@types/debug": "~4.1.12",
    "@types/fs-extra": "^11.0.4",
    "@types/luxon": "^3.7.1",
    "@types/node": "^24.3.0",
    "@types/pg": "^8.15.5",
    "@typescript/native-preview": "7.0.0-dev.20250831.1",
    "chalk": "^5.6.0",
    "commander": "^14.0.0",
    "common-tags": "^1.8.2",
    "dotenv": "^17.2.1",
    "knex": "^3.1.0",
    "knex-migrate": "^1.7.4",
    "tempy": "^3.1.0",
    "ts-toolbelt": "^9.6.0",
    "typescript": "^5.9.2",
    "xlsx": "^0.18.5",
    "zx": "^8.8.1"
  }
}
