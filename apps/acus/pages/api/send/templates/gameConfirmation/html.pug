img(
    src="https://acnw.org/Logo.png"
    width="300"
    height="75"
    alt="AmberCon NW"
    title="AmberCon NW"
    style="-ms-interpolation-mode: bicubic;border: 0;height: auto;line-height: 100%;outline: none;text-decoration: none;"
)

h1 #{update ? "Updated Game Submission Details" : "Game Submission Confirmation"}

p Thank you for your Game Submission for ACNW #{year}

ul
    li Name: #{game.name}
    li Submitted by: #{name} <#{email}>

ul
    li Game Master(s):  #{game.gmNames}
    li Genre/Type: #{game.type}
    li Teen Friendly: #{game.teenFriendly ? "Yes" : "No"}
    li Game Description: #{game.description}
    li Setting: #{game.setting}
    li Character Instructions: #{game.charInstructions}
    li Player Min: #{game.playerMin}
    li Player Max: #{game.playerMax}
    li Player Preference: #{game.playerPreference}
    li Returning Players: #{game.returningPlayers}
    li Players Contact Gm: #{game.playersContactGm ? "Yes" : "No"}
    li Contact Email: #{game.gameContactEmail}
    li Estimated Length: #{game.estimatedLength} hours
    li Slot Preference: #{game.slotPreference}
    li Slot Conflicts: #{game.slotConflicts}
    li Message: #{game.message}


