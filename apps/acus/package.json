{
  "name": "acus",
  "version": "0.1.0",
  "description": "AmberCon US site",
  "author": "guy@wyrdrune.com",
  "license": "MIT",
  "type": "module",
  "private": true,
  "files": [],
  "scripts": {
    "analyze": "ANALYZE=true pnpm build",
    "boot": "DB_ENV=acus pnpm --filter database db:migrate:up && DB_ENV=acus pnpm --filter amber boot && pnpm --filter client-graphql boot",
    "build": "pnpm boot && pnpm next:build",
    "next:build": "NODE_ENV=production next build",
    "db:import": "DB_ENV=acus pnpm --filter database db:import",
    "dev": "pnpm boot && NODE_OPTIONS=--max_old_space_size=4096 next dev -p 30001",
    "start": "next start",
    "tsc": "tsc -p ./tsconfig.json",
    "tsgo": "tsgo -p ./tsconfig.json"
  },
  "dependencies": {
    "@amber/api": "workspace:*",
