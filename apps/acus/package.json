{
  "name": "acus",
  "version": "0.1.0",
  "private": true,
  "description": "AmberCon US site",
  "license": "MIT",
  "author": "guy@wyrdrune.com",
  "files": [],
  "type": "module",
  "scripts": {
    "analyze": "ANALYZE=true pnpm build",
    "boot": "DB_ENV=acus pnpm -F server db:migrate:up && DB_ENV=acus pnpm -F amber boot",
    "build": "pnpm boot && pnpm next:build",
    "next:build": "NODE_ENV=production next build",
    "db:import": "DB_ENV=acus pnpm -F server db:import",
    "dev": "pnpm boot && NODE_OPTIONS=--max_old_space_size=4096 next dev -p 30001",
    "dev:test": "pnpm test:setup && NODE_ENV=test NODE_OPTIONS=--max_old_space_size=4096 next dev -p 30003",
    "start": "next start",
    "tsc": "tsc -p ./tsconfig.json",
    "tsgo": "tsgo -p ./tsconfig.json",
    "test:setup": "DB_ENV=acus dotenv -e .env.test -- pnpm -F server db:cleanTestSeed",
    "test:e2e": "playwright test",
    "test:e2e:coverage": "PLAYWRIGHT_COVERAGE=1 playwright test"
  },
  "dependencies": {
    "@amber/amber": "workspace:*",
    "@amber/api": "workspace:*",
    "@amber/client": "workspace:*",
    "@amber/environment": "workspace:*",
    "@amber/playwright": "workspace:*",
    "@amber/server": "workspace:*",
    "@amber/ui": "workspace:*",
    "@auth0/nextjs-auth0": "4.15.0",
    "@emotion/react": "^11.14.0",
    "@emotion/server": "^11.11.0",
    "@emotion/styled": "^11.14.1",
    "@mdx-js/loader": "^3.1.1",
    "@mdx-js/mdx": "^3.1.1",
    "@mdx-js/react": "^3.1.1",
    "@mui/icons-material": "^7.3.8",
    "@mui/material": "^7.3.8",
    "@mui/system": "^7.3.8",
    "@mui/x-date-pickers": "^8.27.0",
    "@next/mdx": "^16.1.6",
    "@prisma/client": "^7.4.0",
    "@stripe/react-stripe-js": "^5.6.0",
    "@stripe/stripe-js": "^8.7.0",
    "@tanstack/react-query": "^5.90.21",
    "@tanstack/react-table": "^8.21.3",
    "@tanstack/table-core": "8.21.3",
    "@trpc/server": "^11.10.0",
    "debug": "4.4.3",
    "email-templates": "^13.0.1",
    "formik": "^2.4.9",
    "jose": "^6.1.3",
    "luxon": "^3.7.2",
    "micro-cors": "^0.1.1",
    "next": "16.1.6",
    "pg": "^8.18.0",
    "pug": "^3.0.3",
    "react": "^19.2.4",
    "react-dom": "^19.2.4",
    "remark-frontmatter": "^5.0.0",
    "remark-mdx-frontmatter": "^5.2.0",
    "stripe": "^20.3.1",
    "yup": "^1.7.1",
    "zod": "^4.3.6"
  },
  "devDependencies": {
    "@amber/tsconfig": "workspace:*",
    "@babel/core": "^7.29.0",
    "@babel/helper-regex": "^7.10.5",
    "@babel/plugin-syntax-flow": "^7.28.6",
    "@babel/plugin-transform-react-jsx": "^7.28.6",
    "@babel/preset-react": "^7.28.5",
    "@next/bundle-analyzer": "^16.1.6",
    "@playwright/test": "^1.58.2",
    "@types/debug": "4.1.12",
