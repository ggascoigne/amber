  "type": "module",
  "private": true,
  "files": [],
  "scripts": {
    "analyze": "ANALYZE=true pnpm build",
    "boot": "DB_ENV=acnw pnpm --filter database db:migrate:up && DB_ENV=acnw pnpm --filter amber boot && pnpm --filter client boot",
    "build": "pnpm boot && pnpm next:build",
    "next:build": "NODE_ENV=production next build",
    "db:import": "DB_ENV=acnw pnpm --filter database db:import",
    "dev": "pnpm boot && next dev -p 30000",
    "start": "next start",
    "tsc": "tsc -p ./tsconfig.json"
  },
