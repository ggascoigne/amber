{
  "name": "acnw2",
  "version": "0.1.0",
  "description": "AmberCon NW v2 site",
  "author": "guy@wyrdrune.com",
  "license": "MIT",
  "private": true,
  "engines": {
    "node": ">=16",
    "pnpm": ">=7"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/ggascoigne/acnw2.git"
  },
  "files": [],
  "oclif": {
    "additionalHelpFlags": [
      "-h"
    ],
    "additionalVersionFlags": [
      "-v"
    ],
    "commands": "./scripts/cliCommands",
    "bin": "run",
    "plugins": [
      "@oclif/plugin-help"
    ]
  },
  "scripts": {
    "analyze": "source-map-explorer 'build/static/js/*.js'",
    "boot": "wireit",
    "build": "wireit",
    "codegen": "wireit",
    "db:clean": "wireit",
    "db:docker:up": "wireit",
    "db:import": "wireit",
    "db:migrate:down": "wireit",
    "db:migrate:generate": "wireit",
    "db:migrate:up": "wireit",
    "db:setup": "wireit",
    "db:start": "wireit",
    "dev": "wireit",
    "format": "pretty-quick",
    "format:all": "prettier --loglevel warn --write '{src,api,scripts,types}/**/*.{js,jsx,ts,tsx,css,scss,json,graphql}'",
    "gitHash": "./scripts/getGitHash.sh",
    "lint": "eslint --cache --color '{src,api,scripts,shared,types}/**/*.{js,jsx,ts,tsx}' ./.eslintrc.js",
    "preinstall": "npx only-allow pnpm",
    "prepare": "husky install",
    "prepareGraphql": "wireit",
    "start": "wireit",
    "test": "next test"
  },
  "wireit": {
    "build": {
      "command": "NODE_ENV=production next build",
      "dependencies": [
        "boot"
      ]
    },
    "boot": {
      "dependencies": [
        "db:migrate:up",
        "codegen",
        "gitHash"
      ]
    },
    "prepareGraphql": {
      "command": "./scripts/run.js prepareGraphql",
      "dependencies": [
        "db:migrate:up"
      ]
    },
    "codegen": {
      "command": "graphql-codegen --config codegen.yml",
      "dependencies": [
        "prepareGraphql"
      ]
    },
    "db:docker:up": {
      "command": "if [ \"${VERCEL_ENV}\" = \"\" ]; then docker-compose up -d; fi"
    },
    "db:start": {
      "command": "if [ \"${VERCEL_ENV}\" = \"\" ]; then ./scripts/wait-for-postgres.sh -c acnw-postgres; fi",
      "dependencies": [
        "db:docker:up"
      ]
    },
    "db:import": {
      "command": "./scripts/toLocal.sh",
      "dependencies": [
        "db:start"
      ]
    },
    "db:migrate:down": {
      "command": "knex-migrate --cwd ./support --knexfile ./knexfile.cjs down",
      "dependencies": [
        "db:start"
      ]
    },
    "db:migrate:generate": {
      "command": "knex-migrate --cwd ./support --knexfile ./knexfile.cjs generate",
      "dependencies": [
        "db:start"
      ]
    },
    "db:migrate:up": {
      "command": "knex-migrate --cwd ./support --knexfile ./knexfile.cjs up",
      "dependencies": [
        "db:start"
      ]
    },
    "db:setup": {
      "dependencies": [
        "db:clean",
        "db:migrate:up"
      ]
    },
    "db:clean": {
      "command": "./scripts/run.js createCleanDb",
      "dependencies": [
        "db:start"
      ]
    },
    "start": {
      "command": "BROWSER=none next start"
    },
    "dev": {
      "command": "next dev -p 30000",
      "service": true,
      "cascade": false,
      "dependencies": [
        "boot"
      ]
    }
  },
