{
  "name": "ambercon",
  "version": "0.1.0",
  "description": "AmberCon NW v2 site",
  "author": "guy@wyrdrune.com",
  "license": "MIT",
  "private": true,
  "type": "module",
  "engines": {
    "node": ">=22",
    "pnpm": ">=10"
  },
  "packageManager": "pnpm@10.12.1",
  "repository": {
    "type": "git",
    "url": "https://github.com/ggascoigne/amber.git"
  },
  "files": [],
  "scripts": {
    "clean": "rm -rf node_modules apps/*/node_modules packages/*/node_modules",
    "boot": "pnpm --filter acnw boot && pnpm --filter acus boot",
    "dev:nw": "pnpm --filter acnw dev",
    "build:nw": "pnpm --filter acnw build",
    "dev:us": "pnpm --filter acus dev",
    "build:us": "pnpm --filter acus build",
    "db:generate": "DB_ENV=acnw pnpm --filter database db:migrate:generate",
    "format": "pnpm format:all --cache",
    "format:ox": "oxfmt && prettier --write '{apps,packages}/**/*.{css,scss,json}'",
    "format:all": "prettier --write '{apps,packages}/**/*.{js,jsx,ts,tsx,css,scss,json}'",
    "lint": "pnpm run eslint",
    "oxlint": "oxlint --type-aware --fix",
    "eslint": "eslint --cache --color '**/*.{[mc]js,[mc]ts,[jt]s,tsx}'",
    "preinstall": "npx only-allow pnpm",
    "pre-commit": "pnpm format:all && pnpm lint && pnpm tsc",
    "test": "vitest",
    "test:watch": "vitest watch",
    "tsc": "pnpm -r tsc",
    "tsgo": "pnpm -r tsgo"
  },
  "dependencies": {
    "dotenv": "17.2.3",
    "next": "15.5.6",
    "react": "^19.2.0",
    "react-dom": "^19.2.0"
  },
  "devDependencies": {
    "@amber/tsconfig": "workspace:*",
    "@ggascoigne/eslint-config": "^2.5.0",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.0",
    "@types/jsdom": "~27.0.0",
    "@types/node": "^24.9.1",
    "@types/react": "~19.2.2",
    "@types/react-dom": "~19.2.2",
    "@typescript/native-preview": "7.0.0-dev.20251022.1",
    "@vitejs/plugin-react": "^5.0.4",
    "dotenv-cli": "10.0.0",
    "eslint": "^9.38.0",
    "eslint-plugin-oxlint": "^1.28.0",
    "husky": "^9.1.7",
    "jsdom": "^27.0.1",
    "lint-staged": "^16.2.6",
    "oxfmt": "^0.8.0",
    "oxlint": "^1.24.0",
    "oxlint-tsgolint": "^0.2.1",
    "prettier": "^3.6.2",
    "supports-color": "10.2.2",
    "tsx": "^4.20.6",
    "turbo": "^2.5.8",
    "typescript": "^5.9.3",
    "vitest": "^4.0.1"
  },
  "prettier": {
    "printWidth": 120,
    "singleQuote": true,
    "semi": false,
    "jsxSingleQuote": true
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "./scripts/noForbiddenCode.sh",
      "prettier --no-color --write",
      "eslint"
    ],
    "*.json": [
      "prettier --no-color --write"
    ],
    "*.{css,scss}": [
      "prettier --no-color --write"
    ]
  },
  "browserslist": [
    ">0.5%",
    "not dead",
    "not ie 11",
    "not op_mini all"
  ]
}
