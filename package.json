{
  "name": "acnw2",
  "version": "0.1.0",
  "description": "AmberCon NW v2 site",
  "author": "guy@wyrdrune.com",
  "license": "MIT",
  "private": true,
  "engines": {
    "node": ">=18",
    "pnpm": ">=8"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/ggascoigne/acnw2.git"
  },
  "files": [],
  "oclif": {
    "additionalHelpFlags": [
      "-h"
    ],
    "additionalVersionFlags": [
      "-v"
    ],
    "commands": "./scripts/cliCommands",
    "bin": "run",
    "plugins": [
      "@oclif/plugin-help"
    ]
  },
  "scripts": {
    "boot": "pnpm --filter acnw boot && pnpm --filter acus boot",
    "dev:nw": "pnpm --filter acnw dev",
    "build:nw": "pnpm --filter acnw build",
    "dev:us": "pnpm --filter acus dev",
    "build:us": "pnpm --filter acus build",
    "db:generate": "DB_ENV=acnw pnpm --filter database db:migrate:generate",
    "format": "pretty-quick",
    "format:all": "prettier --loglevel warn --write '{apps,packages}/**/*.{js,jsx,ts,tsx,css,scss,json,graphql}'",
    "lint": "pnpm -r --parallel lint",
    "preinstall": "npx only-allow pnpm",
    "prepare": "husky install",
    "pre-commit": "pnpm format:all && pnpm lint && pnpm tsc",
    "test": "next test",
    "tsc": "pnpm -r tsc"
  },
  "devDependencies": {
    "eslint-config-custom": "workspace:*",
    "husky": "^8.0.3",
    "lint-staged": "^13.2.1",
    "next": "13.3.1",
    "prettier": "^2.8.7",
    "pretty-quick": "^3.1.3",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "tsconfig": "workspace:*",
    "turbo": "^1.9.3",
    "typescript": "^5.0.4"
  },
  "prettier": {
    "printWidth": 120,
    "singleQuote": true,
    "semi": false,
    "jsxSingleQuote": true
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "./scripts/noForbiddenCode.sh",
      "prettier --no-color --write",
      "eslint"
    ],
    "*.{css,scss,graphql}": [
      "prettier --no-color --write"
    ]
  },
  "browserslist": [
    ">0.5%",
    "not dead",
    "not ie 11",
    "not op_mini all"
  ],
  "pnpm": {
    "patchedDependencies": {
      "@eslint/eslintrc@2.0.2": "patches/@eslint__eslintrc@2.0.2.patch"
    }
  }
}
