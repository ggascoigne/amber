{
  "name": "acnw2",
  "version": "0.1.0",
  "description": "AmberCon NW v2 site",
  "author": "guy@wyrdrune.com",
  "license": "MIT",
  "private": true,
  "engines": {
    "node": ">=18",
    "pnpm": ">=7"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/ggascoigne/acnw2.git"
  },
  "files": [],
  "oclif": {
    "additionalHelpFlags": [
      "-h"
    ],
    "additionalVersionFlags": [
      "-v"
    ],
    "commands": "./scripts/cliCommands",
    "bin": "run",
    "plugins": [
      "@oclif/plugin-help"
    ]
  },
  "scripts": {
    "acnw:dev": "pnpm --filter acnw dev",
    "acnw:build": "pnpm --filter acnw build",
    "format": "pretty-quick",
    "format:all": "prettier --loglevel warn --write '{apps,packages}/**/*.{js,jsx,ts,tsx,css,scss,json,graphql}'",
    "lint": "pnpm -r --parallel lint",
    "preinstall": "npx only-allow pnpm",
    "prepare": "husky install",
    "test": "next test"
  },
  "wireit": {
    "build": {
      "command": "NODE_ENV=production next build",
      "dependencies": [
        "boot"
      ]
    },
    "boot": {
      "dependencies": [
        "db:migrate:up",
        "codegen",
        "gitHash"
      ]
    },
    "start": {
      "command": "BROWSER=none next start"
    },
    "dev": {
      "command": "next dev -p 30000",
      "service": true,
      "cascade": false,
      "dependencies": [
        "boot"
      ]
    }
  },
  "dependencies": {},
  "devDependencies": {
    "eslint-config-custom": "workspace:*",
    "husky": "^8.0.2",
    "lint-staged": "^13.1.0",
    "next": "^13.0.6",
    "prettier": "^2.8.1",
    "pretty-quick": "^3.1.3",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "tsconfig": "workspace:*",
    "turbo": "latest"
  },
  "prettier": {
    "printWidth": 120,
    "singleQuote": true,
    "semi": false,
    "jsxSingleQuote": true
  },
  "importSort": {
    ".ts, .tsx": {
      "style": "module",
      "parser": "typescript"
    },
    ".js, .jsx": {
      "style": "module"
    }
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "./scripts/noForbiddenCode.sh",
      "prettier --no-color --write",
      "eslint"
    ],
    "*.{css,scss,graphql}": [
      "prettier --no-color --write"
    ]
  },
  "browserslist": [
    ">0.5%",
    "not dead",
    "not ie 11",
    "not op_mini all"
  ],
  "pnpm": {
    "patchedDependencies": {
      "@eslint/eslintrc@1.3.3": "patches/@eslint__eslintrc@1.3.3.patch"
    }
  }
}
