  "scripts": {
    "analyze": "source-map-explorer 'build/static/js/*.js'",
    "build": "NODE_ENV=production react-scripts build",
    "clean:install": "rm -rf node_modules && yarn && npx yarn-deduplicate && yarn audit",
    "codegen": "graphql-codegen --config codegen.yml",
    "db:clean": "yarn db:start && yarn tsnode ./scripts/createCleanDb.ts",
    "db:import": "yarn db:start && ./scripts/toLocal.sh",
    "db:migrate:down": "knex-migrate --cwd ./support --knexfile ./knexfile.js down",
    "db:migrate:generate": "knex-migrate --cwd ./support --knexfile ./knexfile.js generate",
    "db:migrate:up": "knex-migrate --cwd ./support --knexfile ./knexfile.js up",
    "db:setup": "yarn db:clean && yarn db:migrate:up",
    "db:start": "docker-compose up -d && ./scripts/wait-for-postgres.sh -c acnw-postgres",
    "discord:register": "yarn tsnode ./scripts/discordRegister.ts",
    "debug": "vc dev --listen 30000",
    "format": "prettier --no-color --loglevel warn --write '{src,api,scripts,types}/**/*.{js,jsx,ts,tsx,css,scss,json,graphql}'",
    "gitHash": "./scripts/getGitHash.sh",
    "lint": "eslint '{src,api,scripts,support,types}/**/*.{js,jsx,ts,tsx}'",
    "postinstall": "patch-package",
    "prebuild": "yarn setup",
    "prestart": "yarn setup",
    "setup": "yarn db:migrate:up && yarn tsnode ./scripts/prepareGraphql.ts && yarn codegen && yarn gitHash",
    "start": "BROWSER=none react-scripts start",
    "test": "react-scripts test",
    "tsnode": "TS_NODE_PROJECT=./tsconfig.commonjs.json",
    "typesync": "typesync",
    "prepare": "husky install"
  },
  "prettier": {
    "printWidth": 120,
    "singleQuote": true,
    "semi": false,
    "jsxSingleQuote": true
  },
  "importSort": {
    ".ts, .tsx": {
      "style": "module",
      "parser": "typescript"
    },
    ".js, .jsx": {
      "style": "module"
    }
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "./scripts/noForbiddenCode.sh",
      "prettier --no-color --write",
      "yarn lint"
    ],
    "*.{css,scss,graphql}": [
      "prettier --no-color --write"
    ]
  },
  "browserslist": [
    ">0.5%",
    "not dead",
    "not ie 11",
    "not op_mini all"
  ]
}
